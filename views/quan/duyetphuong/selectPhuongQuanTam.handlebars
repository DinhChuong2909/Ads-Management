  <div>
    <h1 class='text-2xl py-2 font-medium text-center'>Choose Wards</h1>
    {{#each wardList}}
      <div class='custom-checkbox'>
        <input type='checkbox' id='ward{{this.ID}}' name='wards[]' value='{{this.ID}}' />
        <label class='w-44' for='ward{{this.ID}}'>Ward {{this.Name}}</label>
      </div>
    {{/each}}
  </div>

  <button
    class='text-base px-6 py-0.5 rounded-lg bg-[#105BBD] text-center text-white mt-1'
    type='submit'
  >Select</button>
