<div class="w-screen h-[90%] flex justify-center items-center">
  <div
    class="w-56 h-fit mx-auto bg-[#f2f2f2] px-4 pt-2 shadow-xl rounded-lg flex flex-col justify-center items-center"
  >
    <h1 class="text-2xl font-medium text-center">Login</h1>
    {{#if messages.error}}
      {{messages.error}}
    {{/if}}
    <form
      action="/login"
      method="POST"
      class="flex flex-col justify-center items-center gap-2"
    >
      <div>
        <label
          class="text-sm font-medium text-gray-900"
          for="email"
        >Email</label>
        <input
          class="h-7 w-full px-1 mt-0.5 rounded-lg border border-gray-300"
          type="email"
          id="email"
          name="email"
          required
        />
      </div>
      <div>
        <label
          class="text-sm font-medium text-gray-900"
          for="password"
        >Password</label>
        <input
          class="h-7 w-full px-1 mt-0.5 rounded-lg border border-gray-300"
          type="password"
          id="password"
          name="password"
          required
        />
      </div>
      <div class="flex flex-col gap-2 text-white mt-1">
        <button
          class="text-lg font-light px-6 py-0.5 rounded-lg bg-[#105BBD] text-center"
          type="submit"
        >Login</button>
        <a
          class="text-lg font-light px-6 py-0.5 rounded-lg bg-[#105BBD] text-center"
          href="/register"
        >Register</a>
      </div>
    </form>
  </div></div>