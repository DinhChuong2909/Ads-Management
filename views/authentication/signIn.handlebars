<div class='w-full h-[90vh] flex justify-center items-center'>
  <div class='w-fit h-fit p-4 bg-[#f2f2f2] shadow-xl rounded-lg flex flex-col justify-start ml-10'>
    <table>
      <tr>
        <th class="font-semibold">Cán bộ</th>
        <th class="w-40 px-4">Email</th>
        <th class="px-4">Mật khẩu</th>
      </tr>
      <tr>
        <td class="font-semibold">Phường</td>
        <td class="w-40 px-4 text-blue-500">phuong@gmail.com</td>
        <td class="px-4 text-red-500">123</td>
      </tr>
      <tr>
        <td class="font-semibold">Quận</td>
        <td class="w-40 px-4 text-blue-500">quan@gmail.com</td>
        <td class="px-4 text-red-500">123</td>
      </tr>
      <tr>
        <td class="font-semibold">Sở</td>
        <td class="w-40 px-4 text-blue-500">so@gmail.com</td>
        <td class="px-4 text-red-500">123</td>
      </tr>
    </table>
  </div>
  <div class='w-56 h-fit mx-auto bg-[#f2f2f2] px-4 pt-2 pb-3 shadow-xl rounded-lg flex flex-col justify-center ml-4
    items-center'>
    <h1 class='text-2xl py-2 font-medium text-center'>Login</h1>
    {{#if messages.error}}
    {{messages.error}}
    {{/if}}
    <form action='/login' method='POST' class='flex flex-col justify-center items-center gap-2'>
      <div>
        <label class='text-sm font-medium text-gray-900' for='Email'>Email</label>
        <input class='h-7 w-full px-1 mt-0.5 rounded-lg border border-gray-300' type='email' id='Email' name='Email'
          required />
      </div>
      <div>
        <label class='text-sm font-medium text-gray-900' for='Password'>Password</label>
        <input class='h-7 w-full px-1 mt-0.5 rounded-lg border border-gray-300' type='password' id='Password'
          name='Password' required />
      </div>
      <div class='flex flex-col gap-2 text-white mt-1'>
        <button class='text-base px-6 py-0.5 rounded-lg bg-[#105BBD] text-center' type='submit'
          onclick='{showToast}'>Login</button>
        <a class='text-base px-6 py-0.5 rounded-lg bg-[#105BBD] text-center' href='/forgot-password'>Forget</a>
      </div>
    </form>
  </div>
</div>