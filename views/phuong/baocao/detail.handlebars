<div
    class="w-[90%] mr-auto p-4 my-4 flex flex-row bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <div class="w-[100%]">
        <div class="grid gap-4">
            <div>
                <img class="h-auto w-fit rounded-lg"
                    src="/{{this.category.HinhAnh}}" alt="">
            </div>
            <div class="grid grid-cols-5 gap-4 w-fit">
                <div>
                    <img class="h-auto max-w-full rounded-lg"
                        src="/{{this.category.HinhAnh}}" alt="">
                </div>
                <div>
                    <img class="h-auto max-w-full rounded-lg"
                        src="/{{this.category.HinhAnh}}" alt="">
                </div>
                <div>
                    <img class="h-auto max-w-full rounded-lg"
                        src="/{{this.category.HinhAnh}}" alt="">
                </div>
                <div>
                    <img class="h-auto max-w-full rounded-lg"
                        src="/{{this.category.HinhAnh}}" alt="">
                </div>
                <div>
                    <img class="h-auto max-w-full rounded-lg"
                        src="/{{this.category.HinhAnh}}" alt="">
                </div>
            </div>
        </div>
    </div>
    <div class="p-4 w-[100%]">
        <div class="flex flex-row justify-between">
            <div class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">Hình thức báo cáo</div>
            {{this.category.HinhThucReport}}
        </div>
        <div class="flex flex-row justify-between">
            <div class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">Họ và tên</div>
            {{this.category.HoTen}}
        </div>
        <div class="flex flex-row justify-between">
            <div class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">Email</div>
            {{this.category.Email}}
        </div>
        <div class="flex flex-row justify-between">
            <div class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">Số điện thoại</div>
            {{this.category.SDT}}
        </div>
        <div class="flex flex-row justify-between">
            <div class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">Thời gian gửi</div>
            {{formatDate ThoiGian "short"}}
        </div>
        <div class="flex flex-row justify-between">
            <div class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">Tinh trạng xử lý</div>
            {{#eq this.category.Xuly "1"}}
            Đã xử lý xong
            {{else}}
            Chưa xử lý
            {{/eq}}
        </div>
        <div class="w-full">
            <div class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">Nội dung báo cáo</div>
            <div class="w-full h-fit mb-2 border-2 rounded-md p-2">
                {{{this.category.NoiDungBaoCao}}}
            </div>
        </div>
        <button id="edit" onclick="handleEdit({{this.category.Xuly}})"
            class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            CẬP NHẬP XỬ LÝ
            <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9" />
            </svg>
        </button>

        <form id="updateForm" action="/phuong/baocao/detail/{{this.category.STT}}" method="POST">
            <div class="w-full">
                <textarea id="text" name="NoiDungXuLy"
                    class="w-[100%] h-[100px] mt-2 p-2 border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400"
                    placeholder="Nội dung xử lý">{{{this.category.NoiDungXuLy}}}</textarea>
            </div>
            <button type="submit" id="send"
                class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                GỬI
                <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                    fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M1 5h12m0 0L9 1m4 4L9 9" />
                </svg>
            </button>
        </form>

    </div>
</div>

<script>
    const handleEdit = (Xuly) => {
        console.log(Xuly);
        if (Xuly === 0) {
            document.getElementById("text").style.display = "inline-block";
            document.getElementById("send").style.display = "inline-flex";
        } else {
            document.getElementById("text").style.display = "hidden";
            document.getElementById("send").style.display = "hidden";
        }
    }
</script>