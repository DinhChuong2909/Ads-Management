<div class="w-fit shadow-md mr-auto my-4 rounded-lg">
  <table
    class="w-auto h-screen text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
  >
    <caption
      class="p-5 text-lg font-semibold text-left rtl:text-right text-gray-900 bg-white dark:text-white dark:bg-gray-800 rounded-lg"
    >
      Điểm đặt quảng cáo
    </caption>
    <thead
      class=" text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
    >
      <tr>
        <th scope="col" class="px-6 py-3">
          ID
        </th>
        <th scope="col" class="px-6 py-3">
          Loại Bảng
        </th>
        <th scope="col" class="px-6 py-3">
          Địa chỉ       
          </th>
        <th scope="col" class="px-6 py-3">
          Khu Vực
        </th>
        <th scope="col" class="px-6 py-3">
          Loại vị trí
        </th>
        <th scope="col" class="px-6 py-3">
          Hình thức
        </th>
        <th scope="col" class="px-6 py-3">
          <span class="sr-only">Action</span>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#if this.empty}}
      <div class="card-body">
        Không có dữ liệu
      </div>
      {{else}}
        {{#each this.list}}
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <th
              scope="row"
              class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
            >
              {{Id}}
            </th>
            <td class="px-6 py-4">
              {{LoaiBangQC}}
            </td>
            <td class="px-6 py-4">
              {{DiaChi}}
            </td>
            <td class="px-6 py-4">
              {{KhuVuc}}
            </td>
            <td class="px-6 py-4">
              {{positionInfo.LoaiViTri}}
            </td>
            <td class="px-6 py-4">
              {{positionInfo.HinhThucQC}}
            </td>
            <td class="px-6 py-4 text-right">
              <a
                href="#"
                class="font-medium text-blue-600 dark:text-blue-500 hover:underline"
              >Yêu cầu chỉnh sửa</a>
            </td>
          </tr>
        {{/each}}
    </tbody>
  </table>
  <nav class="flex-wrap justify-between py-4 pl-4" aria-label="Table navigation">
    <ul class="flex mx-auto -space-x-px rtl:space-x-reverse text-sm h-8">
      <li>
          <a href="#" class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">Previous</a>
      </li>
      {{#each this.pageNumbers}}
      {{#if isActive}}
      <li>
          <a href="#" aria-current="page" class="flex items-center justify-center px-3 h-8 text-blue-600 border border-gray-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white">{{value}}</a>
      </li>
      {{else}}
      <li>
          <a href="?page={{value}}" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">{{value}}</a>
      </li>
      {{/if}}
      {{/each}}
      <li>
          <a href="#" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">Next</a>
      </li>
    </ul>
  </nav>
  {{/if}}
</div>
