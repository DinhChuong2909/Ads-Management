<div class=" shadow-md mx-auto my-4 rounded-lg mr-4">
    <table class="w-full h-fit text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <caption
            class="p-5 pt-7 text-[24px] text-[#0059CC] font-bold text-left rtl:text-right bg-white dark:text-white dark:bg-gray-800 rounded-lg">
            DACH SÁCH BẢNG QUẢNG CÁO YÊU CẦU CẤP PHÉP
        </caption>
        <thead class=" text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-4 py-3">
                    ID
                </th>
                <th scope="col" class="px-4 py-3">
                    Email
                </th>
                <th scope="col" class="px-4 py-3">
                    Địa chỉ
                </th>
                <th scope="col" class="px-4 py-3">
                    Khu Vực
                </th>
                <th scope="col" class="px-4 py-3">
                    Hình thức
                </th>
                <th scope="col" class="px-4 py-3">
                    Nội dung
                </th>
                <th scope="col" class="px-4 py-3">
                    Ngày bắt đầu
                </th>
                <th scope="col" class="px-4 py-3">
                    Ngày kết thúc
                </th>
                <th scope="col" class="px-4 py-3">
                    <span class="sr-only">Action</span>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#if this.empty}}
            <div class="card-body">
                Không có dữ liệu
            </div>
            {{else}}
            {{#each this.list}}
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-4 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    {{ID}}
                </th>
                <td class="px-4 py-4">
                    {{Email}}
                </td>
                <td class="px-4 py-4">
                    {{DiaChi}}
                </td>
                <td class="px-4 py-4">
                    {{KhuVuc}}
                </td>
                <td class="px-4 py-4">
                    {{HinhThucQC}}
                </td>
                <td class="px-4 py-4">
                    {{NoiDungQC}}
                </td>
                <td class="px-4 py-4">
                    {{formatDate NgayBatDau "short"}}
                </td>
                <td class="px-4 py-4">
                    {{formatDate NgayKetThuc "short"}}
                </td>
                <td class="px-4 py-4">
                    <form action="/so/capphep/{{ID}}" method="post">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="flex flex-row gap-3">
                            <button name="duyet" value="1" type="submit"
                                class="text-white bg-green-500 hover:bg-green-700 hover:shadow-xl rounded-xl py-3 px-2 font-bold">Duyệt</button>
                            <button name="duyet" value="-1" type="submit"
                                class="text-white bg-red-500 hover:bg-red-700 hover:shadow-xl rounded-xl py-3 px-2 font-bold">Không
                                Duyệt</button>
                        </div>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <nav class="flex-wrap justify-between py-4 pl-4" aria-label="Table navigation">
        <ul class="flex mx-auto -space-x-px rtl:space-x-reverse text-sm h-8">
            <li>
                <a href="#"
                    class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">Previous</a>
            </li>
            {{#each this.pageNumbers}}
            {{#if isActive}}
            <li>
                <a href="#" aria-current="page"
                    class="flex items-center justify-center px-3 h-8 text-blue-600 border border-gray-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white">{{value}}</a>
            </li>
            {{else}}
            <li>
                <a href="?page={{value}}"
                    class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">{{value}}</a>
            </li>
            {{/if}}
            {{/each}}
            <li>
                <a href="#"
                    class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">Next</a>
            </li>
        </ul>
    </nav>
    {{/if}}
</div>